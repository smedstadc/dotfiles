# dotfiles support
alias zsource="source ~/.zshrc"
alias edot="atom ~/.dotfiles/"
alias dotup="~/.dotfiles/setup"
alias godot="cd ~/.dotfiles"

# dev
alias mux="tmuxinator"
alias tk="tmux kill-session -t"

# rails dev
alias brails="bundle exec bin/rails"
alias brake="bundle exec bin/rake"
alias devtail="tail -f log/development.log"
alias testprep="bundle exec bin/rake db:schema:load RAILS_ENV=test"
alias lsr="lsof -i tcp:3000 | grep ruby"

if [[ "$OSTYPE" == "linux-gnu" ]]; then
  # detach IntelliJ after launching from terminal
  alias mine="nohup mine . >/dev/null 2>&1 & disown"
  alias charm="nohup charm . >/dev/null 2>&1 & disown"
  alias idea="nohup idea . >/dev/null 2>&1 & disown"
  alias wstorm="nohup wstorm . >/dev/null 2>&1 & disown"
fi

# git
alias ga="git add --all"
alias gcan="git commit --amend --no-edit"
alias gco="git checkout"

eval "$(thefuck --alias)"

# steam
alias steam="LD_PRELOAD='/usr/$LIB/libstdc++.so.6' DISPLAY=:0 nohup steam &"
