# dotfiles support
alias zsource="source ~/.zshrc"
alias edot="atom ~/.dotfiles/"
alias dotup="~/.dotfiles/setup"
alias godot="cd ~/.dotfiles"

# dev
alias mux="tmuxinator"
alias tk="tmux kill-session -t"
alias doismell="reek app/ -f html > report.html"

# rails dev
alias brails="bin/rails"
alias brake="bin/rake"
alias devtail="tail -f log/development.log"
alias testtail="tail -f log/test.log"
alias testprep="bin/rake db:schema:load RAILS_ENV=test"
alias lsr="lsof -i tcp:3000 | grep ruby"

if [[ "$OSTYPE" == "linux-gnu" ]]; then
  function runmine() {
    exec mine "$@" &>> /dev/null  &!
  }
  
  function runcharm() {
    exec charm "$@" &>> /dev/null  &!
  }
  
  function runidea() {
    exec idea "$@" &>> /dev/null  &!
  }
  
  function runwstorm() {
    exec wstorm "$@" &>> /dev/null  &!
  }
  
  # detach IntelliJ after launching from terminal
  alias mine=runmine
  alias charm=runcharm
  alias idea=runidea
  alias wstorm=runwstorm
fi

# git
alias ga="git add --all"
alias gcan="git commit --amend --no-edit"
alias gco="git checkout"\

eval "$(thefuck --alias)"
